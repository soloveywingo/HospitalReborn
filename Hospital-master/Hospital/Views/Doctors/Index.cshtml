@model IEnumerable<Hospital.Models.Doctor>
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>

<h2>Doctors</h2>
@using (Html.BeginForm("Index", "Doctors", "Index"))
{
    <div class="form-container active-cyan-4 mb-4">
        <input class="form-control" style="margin-right:1%" type="text" name="searching" placeholder="Search" aria-label="Search">
        <input type="submit" value="Search" />
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patients)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td style="color:red">
                Not match
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @foreach (var patient in item.Patients)
                {
                    <text>@patient.Name ,</text>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
