@model Hospital.Models.Patient

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TaxCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaxCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DayOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DayOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Doctors: 
        </dt>
        <dd>
            @foreach (var doctor in Model.Doctors)
            {
            <li>@doctor.Name</li>
            }
        </dd>
        <dt style="padding-top : 3%">
            Photo
        </dt>
        <dd style="padding-top : 3%">
            <img src="~/AppFile/PatientPictures/@Model.ImageUrl" height="200" , width="300" />
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
