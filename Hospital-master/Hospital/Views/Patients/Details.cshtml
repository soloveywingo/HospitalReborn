@model Hospital.Models.Patient
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div>
    @if (User.IsInRole("Patient"))
    {
        <text>Here is your page. If you still don`t have any doctors to visit, they will be able soon.</text>
    }
    <h4>Patient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TaxCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaxCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DayOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DayOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Doctors:
        </dt>
        <dd>
            @foreach (var doctor in Model.Doctors)
            {
                <li>@doctor.Name</li>
            }
        </dd>
        <dt style="padding-top : 3%">
            Photo
        </dt>
        <dd style="padding-top : 3%">
            <img src="~/AppFile/PatientPictures/@Model.ImageUrl" height="250" , width="250" />
        </dd>
    </dl>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}