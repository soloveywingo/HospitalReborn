@model IEnumerable<Hospital.Models.Patient>
@{
    ViewBag.Title = "Index";

}
<!DOCTYPE html>

<h2>Patients</h2>
@using (Html.BeginForm("Index", "Patients", "Index"))
{
    <div class="form-container active-cyan-4 mb-4">
        <input class="form-control" style="margin-right:1%" type="text" name="searching" placeholder="Search" aria-label="Search">
        <input type="submit" value="Search" />

    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxCode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DayOfBirth)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Doctors
        </th>
        <th>
            Photo
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td style="color:red">
                Not match
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfBirth)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @foreach (var doctor in item.Doctors)
                {
                    <dl style="padding-right : 5%">
                        <dd>@doctor.Name</dd>
                    </dl>
                }
            </td>
            <td>
                <img src="~/AppFile/PatientPictures/@item.ImageUrl" height="30" width="40" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
